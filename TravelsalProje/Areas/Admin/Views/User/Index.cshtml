@using EntityLayer.Concrete
@model List<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sayac = 0;
}

<h1>Kullanıcı Listesi</h1>
<table class="table table-bordered">
    <tr>
        <td>#</td>
        <td>Ad Soyad</td>
        <td>Kullanıcı Adı</td>
        <td>Mail Adresi</td>
        <td>Düzenle</td>
        <td>Sil</td>
        <td>Yorumlar</td>
        <td>Tur Geçmişi</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            @{
                sayac = sayac+1; 
            }
            <td>@sayac</td>
            <td>@item.Name  @item.Surname</td>
            <td>@item.UserName</td>
            <td>@item.Email</td>
            <td><a href="/Admin/User/DeleteUser/@item.Id" class="btn btn-danger">Sil</a></td>
            <td><a href="/Admin/User/EditUser/@item.Id" class="btn btn-success">Düzenle</a></td>
            <td><a href="/Admin/User/CommentUser/@item.Id" class="btn btn-info">Yorum</a></td>
            <td><a href="/Admin/User/ReservationUser/@item.Id" class="btn btn-secondary">Tur Geçmişi</a></td>
        </tr>
    }
</table>
<a href="/Login/SignUp" class="btn btn-primary">Yeni Kullanıcı Kayıt</a>