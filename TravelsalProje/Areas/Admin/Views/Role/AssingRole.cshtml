@model List<RoleAssingViewModel>
@{
    ViewData["Title"] = "AssingRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Role Atama İşlemleri</h1>
<form method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].RoleId" class="form-control" />
            <input type="hidden" asp-for="@Model[i].RoleName" class="form-control" />
            <input type="checkbox" asp-for="@Model[i].RoleExist" class="form-check-input" />
            <label class="form-check-label" for="@Model[i].RoleExist">@Model[i].RoleName</label>
        </div>
    }
    <button class="btn btn-primary">Değişikleri Kaydet</button>
</form>
