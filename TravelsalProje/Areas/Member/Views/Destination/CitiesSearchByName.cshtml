@using EntityLayer.Concrete
@model List<Destinations>
@{
    ViewData["Title"] = "CitiesSearchByName";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Tur Rotası Arayın</h4>
                <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                <div class="heading-elements">
                    <ul class="list-inline mb-0">
                        <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                        <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                        <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                        <li><a data-action="close"><i class="ft-x"></i></a></li>
                    </ul>
                </div>
            </div>
            <div class="card-content collapse show">
                <div class="card-body">
                    <p class="card-text">Web Sitemiz Traversal Üzerinde Tur Rotalarını Arayıp Görüntüleyebilirsiniz.</p>
                    <form asp-action="CitiesSearchByName" method="get" asp-area="Member">
                        <div>
                            Lütfen Aranacak şehri giriniz. <input type="text" name="searchString" class="form-control" value="@ViewData["CurrentFilter"]" />
                            <br />
                            <input type="Submit" value="Şehir Ara" class="btn btn-dark" />
                        </div>
                    </form>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Şehir</th>
                                    <th>Süre</th>
                                    <th>Kapasite</th>
                                    <th>Fiyat</th>
                                    <th>Detaylar</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>@item.DestinationsID</td>
                                        <td>@item.City</td>
                                        <td>@item.DayNight</td>
                                        <td>@item.Capacity</td>
                                        <td>@item.Price₺</td>
                                        <td><a href="/Destination/DestinationDetails/@item.DestinationsID" class="btn btn-outline-info">Detaylar</a></td>
                                    </tr>
                                    }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

